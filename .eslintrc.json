{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "prettier",
        "plugin:prettier/recommended",
        "airbnb"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "prettier",
        "disable",
        "@babel"
    ],
    "processor": "disable/disable",
    "overrides": [
        {
          "files": ["react-todo-redux/**/*.jsx"],
          "settings": {
            "disable/plugins": ["jsx-a11y"]
          }
        }
      ],
    "rules": {
        "prettier/prettier": ["error", {
           "endOfLine":"auto"
         }],
        "class-methods-use-this": 0,
        "import/prefer-default-export": 0,
        "react/prop-types": 0,
        "no-console": 0,
        "linebreak-style": 0,
        "react/prefer-stateless-function": 0

    }
}
